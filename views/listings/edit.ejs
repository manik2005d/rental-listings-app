<% layout("layouts/boilerplate") -%>

<div class="row mt-4">
    <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" value="<%= listing.title %>" id="title" class="form-control" required>
            <div class="invalid-feedback">
                Invalid Title
            </div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">
                Invalid description
            </div>
        </div>
        
        <div class="mb-3">
            Original listing image
            <img src="<%= listing.image.url %>" alt="listing image" style="height: 7rem; width: 13rem;"><br>
            <label for="image" class="form-label">Upload Image</label>
            <input id="image" type="file" name="image" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input id="price" type="text" name="price" value="<%= listing.price %>" class="form-control" required>
                <div class="invalid-feedback">
                    Enter valid price
                </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input id="location" type="text" name="location" value="<%= listing.location %>" class="form-control" required>
                <div class="invalid-feedback">
                    Invalid Location
                </div>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input id="country" type="text" name="country" value="<%= listing.country %>" class="form-control" required>
            <div class="invalid-feedback">
                Invalid country
            </div>
        </div>
        <button class="btn btn-dark edit-btn">Edit</button>
        <br><br>
    </form>
    </div>
</div>